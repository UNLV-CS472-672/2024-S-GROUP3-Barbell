{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "strict": true,
    "paths": {
      "@/*": ["./*"], 
      "~/*": ["./apps/expo/src/*"], 
      "assets/*": ["./apps/expo/assets/*"], 
    },
    "jsx": "react-native",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": ["nativewind/types"]
  },
  "include": ["src", "*.ts", "*.js", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules"]
}
